<Window x:Class="Lection0510.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lection0510"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300" FontSize="20" Initialized="Window_Initialized" Loaded="Window_Loaded" Closing="Window_Closing" Closed="Window_Closed" Unloaded="Window_Unloaded">
    <StackPanel x:Name="panel">
        <TextBox x:Name="numberTextBox" 
                 KeyUp="NumberTextBox_KeyUp" 
                 KeyDown="NumberTextBox_KeyDown"
                 PreviewKeyDown="NumberTextBox_PreviewKeyDown"
                 PreviewTextInput="NumberTextBox_PreviewTextInput" MouseMove="Window_MouseMove"
                 />
        <WrapPanel Button.Click="NumberButton_Click">
            <Button Content="1"/>
            <Button Content="2"/>
            <Button Content="3"/>
            <Button Content="4"/>
            <Button Content="5"/>
            <Button Content="6"/>
            <Button Content="7"/>
            <Button Content="8"/>
            <Button Content="9"/>
            <Button Content="0"/>
            <Label x:Name="infoLabel"/>
        </WrapPanel>
    </StackPanel>
</Window>
