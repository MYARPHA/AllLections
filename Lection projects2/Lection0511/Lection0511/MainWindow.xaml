<Window x:Class="Lection0511.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lection0511"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
       
        >
    <Canvas x:Name="canvas"
        Rectangle.MouseMove="Canvas_MouseMove"
        Rectangle.MouseDown="Canvas_MouseDown"
        Rectangle.MouseUp="Canvas_MouseUp">
        <Label x:Name="positionLabel" Content="x; y"/>
        <Button Content="OK" Canvas.Left="100" Canvas.Top="200"/>
        <Rectangle Fill="LightBlue" Width="100" Height="50" Canvas.Top="100" Canvas.Left="200"/>
    </Canvas>
</Window>
